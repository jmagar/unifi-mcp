# UniFi Local Controller MCP Server Configuration
# Copy this to .env and update with your actual values

# Required: Local UniFi Controller Connection
UNIFI_CONTROLLER_URL=https://192.168.1.1:443
UNIFI_USERNAME=admin
UNIFI_PASSWORD=your_password_here

# Optional: SSL Verification (usually false for self-signed certs)
UNIFI_VERIFY_SSL=false

# Optional: Controller Type (true for UDM/Cloud Key Gen2+, false for legacy)
UNIFI_IS_UDM_PRO=true

# Optional: MCP Server Configuration
UNIFI_LOCAL_MCP_HOST=0.0.0.0
UNIFI_LOCAL_MCP_PORT=8001
UNIFI_LOCAL_MCP_LOG_LEVEL=INFO
UNIFI_LOCAL_MCP_LOG_FILE=unifi_local_mcp.log

# Note: Replace 192.168.1.1 with your actual Cloud Gateway Max IP address
# Default credentials are usually 'admin' for username
# You can find your gateway IP in the UniFi Network app or your router's DHCP table